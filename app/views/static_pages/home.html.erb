<% if logged_in? %>
  <div class="row">
    <aside class="col-md-4">
      <section class="user_info">
        <%= render 'shared/user_info' %>
      </section>
      <section class="micropost_form">
        <%= render 'shared/micropost_form' %>
      </section>
    </aside>
    <div class="col-md-8">
    <h3>Micropost Feed</h3>

    <% if @feed_items.any? %>
    
    <ol class="microposts">
		<% @feed_items.each do |feed| %>
		<li id="micropost-<%= feed.id %>">
		<%= link_to gravatar_for(feed.user, 50), feed.user %>
		<span class="user"><%= link_to feed.user.name, feed.user %></span>
		<span class="content"><%= feed.content %></span>
		<span class="timestamp">
		Posted <%= time_ago_in_words(feed.created_at) %> ago.
		</span>
		</li>
		<% if current_user?(feed.user) %>
		<%= link_to "delete", feed, method: :delete, data: { confirm: "You sure? "} %>
		<% end %>

		<% end %>
	</ol>
	<%= will_paginate @feed_items %>
    
    <% end %>

    </div>
  </div>
<% else %>
<div class="center jumbotron">
  <h1>Welcome to Bawingksy's RoR</h1>

  <h2>
    This is the home page for
    <a href="http://bawingsky.com/">Bawingsky's Digital Portfolio</a> hammered with
    Ruby on Rails from its <a href="http://www.railstutorial.org/">tutorial site</a>.
  </h2>

  <%= link_to "Sign up now!", signup_path, class: "btn btn-lg btn-primary" %>
</div>

<%= link_to image_tag("rails.png", alt: "Rails logo"),'http://rubyonrails.org/' %>
<% end %>