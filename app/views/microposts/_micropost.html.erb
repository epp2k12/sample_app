<li id="micropost-<%= micropost.id %>" style="border: 1px solid red">

<div class="row">
<div class="col-sm-3">
	<%= link_to gravatar_for(micropost.user, 50), micropost.user %>
	<span class="user user_name" style="color:red;"><%= link_to micropost.user.name, micropost.user %></span>
</div>

	
<div class="col-sm-9">
	<span class="content">
	<%= micropost.content %>
	</span>
	<div>
	<%= image_tag micropost.picture.url if micropost.picture? %>
	</div>
	<span class="timestamp">
		Posted <%= time_ago_in_words(micropost.created_at) %> ago.
	
        <% if current_user?(micropost.user) %>
        <%= link_to "Delete", micropost, method: :delete, data: { confirm: "You sure? "}, remote: true, :class=>'delete_post' %>
        <% end %> 

    </span>	

 	<div class="row">
 	<div class="col-sm-12">
 		<div id="comment-<%= micropost.id %>">
 		<%= render partial: 'comments/comments', :locals => { micropost: micropost } %>
 		</div>

    </div>
    </div>


</div>
</div>
</li>